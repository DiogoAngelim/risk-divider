{
  "name": "risk-divider",
  "version": "1.0.0",
  "description": "A app for analyzing and managing investment risks.",
  "author": "Diogo Angelim",
  "private": true,
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:react\" \"npm:dev:electron\"",
    "dev:react": "cd app && vite",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron-forge start",
    "build": "cd app && cross-env NODE_ENV=production vite build && cd .. && cross-env NODE_ENV=production electron-forge package",
    "start": "electron-forge start",
    "start:prod": "cross-env NODE_ENV=production electron-forge start",
    "lint": "cd app && eslint .",
    "make:mac": "cross-env NODE_ENV=production electron-forge make --platform=darwin --arch=x64",
    "make:win": "cross-env NODE_ENV=production electron-forge make --platform=win32 --arch=x64",
    "make:linux": "cross-env NODE_ENV=production electron-forge make --platform=linux --arch=x64"
  },
  "dependencies": {
    "@rise8/tailwind-pixel-perfect-preset": "^1.0.1",
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "path": "^0.12.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.2",
    "electron": "^38.4.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^7.0.0",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "electron/icon.icns",
        "asar": {
          "unpack": "app/assets-api-wasm/pkg/**/*",
          "unpackDir": "app/assets-api-wasm/pkg"
        },
        "extraResource": [
          "app/dist",
          "app/bin"
        ],
        "ignore": [
          "^/app/python($|/)",
          "^/app/src($|/)",
          "^/node_modules($|/)",
          "^/data($|/)",
          "^/.git($|/)",
          "^/.vscode($|/)",
          "^/.DS_Store$",
          "^/README.md$",
          "^/.gitignore$",
          "^/.eslintrc",
          "^/tsconfig",
          "^/vite.config",
          "^/tailwind.config",
          "^/postcss.config",
          "^/app/node_modules($|/)",
          "^/app/src($|/)",
          "^/app/vite.config.ts$",
          "^/app/tsconfig",
          "^/app/tailwind.config.js$",
          "^/app/postcss.config.js$",
          "^/app/eslint.config.js$"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        }
      ],
      "buildIdentifier": "prod",
      "makeOptions": {
        "dir": "dist"
      }
    }
  }
}